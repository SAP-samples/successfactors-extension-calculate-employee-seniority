{
  "name": "seniority-calc",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/hana-client": "^2.6.61",
    "@sap/xb-msg-amqp-v100": "^0.9.51",
    "@sap/xssec": "^3.2.1",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.4.1"
  },
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^4.0.5",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": { 
        "kind": "dummy-auth" 
      },
      "messaging": {
        "kind": "enterprise-messaging-shared",
        "[production]": {
          "kind": "enterprise-messaging-shared"
        }
      },
      "seniority-calc-dest": {
        "kind": "destination"
      },
      "sfsf": {
        "kind": "odata",
        "credentials": {
          "destination": "seniority-calc-sfsf-service",
          "path": "/odata/v2",
          "requestTimeout": 1000000
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
